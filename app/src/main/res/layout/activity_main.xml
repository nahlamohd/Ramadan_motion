<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraint"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/turquoise"
    android:padding="16dp"
    app:layoutDescription="@xml/activity_main_scene">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ramadan_animation"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:lottie_rawRes="@raw/ramadan"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textColor="@color/title_color"
        android:textSize="@dimen/title_text_size"
        android:fontFamily="@font/poppins"/>
    <TextView
        android:id="@+id/dua_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/duaa_rectangle"
        android:fontFamily="@font/poppins"
        android:gravity="fill"
        android:padding="@dimen/normal_padding"
        android:text="@string/duaa"
        android:textColor="@color/details_text_color"
        android:textSize="@dimen/details_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TableLayout
        android:id="@+id/prayer_time_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle">
        <TableRow>
            <TextView
                android:layout_width="@dimen/zero_width"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:paddingVertical="@dimen/large_padding"
                android:text="@string/prayer_times"
                android:textColor="@color/title_color"
                android:textSize="@dimen/second_title_text_size" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="@dimen/zero_width"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:padding="@dimen/small_padding"
                android:text="Fajar"
                android:textColor="@color/details_text_color"
                android:textSize="@dimen/details_text" />

            <TextView
                android:layout_width="@dimen/zero_width"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:gravity="right"
                android:padding="@dimen/small_padding"
                android:text="4:39 am"
                android:textColor="@color/details_text_color"
                android:textSize="@dimen/details_text" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="@dimen/zero_width"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:padding="@dimen/small_padding"
                android:text="Sunrise"
                android:textColor="@color/details_text_color"
                android:textSize="@dimen/details_text" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:gravity="right"
                android:padding="@dimen/small_padding"
                android:text="6:04 am"
                android:textColor="@color/details_text_color"
                android:textSize="@dimen/details_text" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="@dimen/zero_width"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:padding="@dimen/small_padding"
                android:text="Duhar"
                android:textColor="@color/details_text_color"
                android:textSize="@dimen/details_text" />

            <TextView
                android:layout_width="@dimen/zero_width"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:gravity="right"
                android:padding="@dimen/small_padding"
                android:text="12:10 pm"
                android:textColor="@color/details_text_color"
                android:textSize="@dimen/details_text" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="@dimen/zero_width"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:padding="@dimen/small_padding"
                android:text="Assar"
                android:textColor="@color/details_text_color"
                android:textSize="@dimen/details_text" />

            <TextView
                android:layout_width="@dimen/zero_width"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:gravity="right"
                android:padding="@dimen/small_padding"
                android:text="3:38 pm"
                android:textColor="@color/details_text_color"
                android:textSize="@dimen/details_text" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="@dimen/zero_width"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:padding="@dimen/small_padding"
                android:text="Maghrib"
                android:textColor="@color/details_text_color"
                android:textSize="@dimen/details_text" />

            <TextView
                android:layout_width="@dimen/zero_width"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:gravity="right"
                android:padding="@dimen/small_padding"
                android:text="6:15 pm"
                android:textColor="@color/details_text_color"
                android:textSize="@dimen/details_text" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="@dimen/zero_width"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:padding="@dimen/small_padding"
                android:text="Isha"
                android:textColor="@color/details_text_color"
                android:textSize="@dimen/details_text" />

            <TextView
                android:layout_width="@dimen/zero_width"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:gravity="right"
                android:padding="@dimen/small_padding"
                android:text="7:45 pm"
                android:textColor="@color/details_text_color"
                android:textSize="@dimen/details_text" />
        </TableRow>
    </TableLayout>




</androidx.constraintlayout.motion.widget.MotionLayout>